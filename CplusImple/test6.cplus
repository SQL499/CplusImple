        result = 0
    endin result
    else:
        if (n == 1):
            result = 1
        endin result
        else:
            temp1 = n - 1
            temp2 = n - 2
            fib1 = fibonacci(temp1)
            fib2 = fibonacci(temp2)
            result = fib1 + fib2
        endin result
    endin result
endin result

